rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /calls/{callId} {
      allow read, write: if true;
      
      match /offerCandidates/{candidateId} {
        allow read, write: if true;
      }
      
      match /answerCandidates/{candidateId} {
        allow read, write: if true;
      }
    }
  }
}
